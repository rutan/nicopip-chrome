{
  "type": "module",
  "name": "nicopip",
  "version": "1.9.0",
  "description": "【非公式】ニコニコ動画・ニコニコ生放送をPinPで再生します",
  "author": "ru_shalm <ru_shalm@hazimu.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:*",
    "build:vite": "cross-env NODE_ENV=production vite build",
    "dev": "vite",
    "lint": "run-s lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:biome": "biome check .",
    "format": "biome check --write .",
    "zip": "run-s format build zip:*",
    "zip:zipping": "deployment-zip -c .deployment-zip.ts ./dist",
    "prepare": "husky",
    "pre-commit": "run-s lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@crxjs/vite-plugin": "^2.2.0",
    "@rutan/deployment-zip": "^0.5.0",
    "@types/chrome": "^0.1.4",
    "@types/dom-navigation": "^1.0.6",
    "@types/node": "^24.3.0",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "packageManager": "pnpm@10.14.0"
}
