{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "allowJs": true,
    "rootDir": ".",
    "noEmit": true,
    "lib": ["es2017", "dom"],
    "types": ["@types/node", "@types/chrome"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
