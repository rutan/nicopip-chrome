{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "allowJs": true,
    "rootDir": ".",
    "noEmit": true,
    "lib": ["ESNext", "dom"],
    "types": ["@types/node", "@types/chrome", "@types/dom-navigation"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
